{
  "name": "nexus-digital-fullstack",
  "version": "1.0.0",
  "description": "Full-stack application for Nexus Studio",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "vite",
    "dev:server": "nodemon server.js",
    "dev:auto": "node auto-builder.js",
    "dev:smart": "node smart-server.js",
    "dev:watch": "concurrently \"npm run dev:auto\" \"npm run dev:server\"",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "vite build",
    "build:start": "npm run build && npm start",
    "build:watch": "npm run dev:auto",
    "server:guaranteed": "node smart-server.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.0",
    "vite": "^5.4.20"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
