# ==========================================
# NEXUS DIGITAL BACKEND CONFIGURATION
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (готово для майбутнього підключення)
# MongoDB
MONGODB_URI=mongodb://localhost:27017/nexus-digital
MONGODB_TEST_URI=mongodb://localhost:27017/nexus-digital-test

# PostgreSQL (альтернатива)
# DATABASE_URL=postgresql://username:password@localhost:5432/nexus_digital

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Email Configuration (для форми контактів)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin Email
ADMIN_EMAIL=admin@nexus-digital.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./public/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# External APIs (готово для інтеграцій)
# GOOGLE_ANALYTICS_ID=GA_TRACKING_ID
# FACEBOOK_PIXEL_ID=FB_PIXEL_ID
# MAILCHIMP_API_KEY=your-mailchimp-api-key

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-key

# Development Settings
LOG_LEVEL=debug
ENABLE_DOCS=true

# Production Settings (закоментовано для розробки)
# NODE_ENV=production
# PORT=80
# CORS_ORIGIN=https://nexus-digital.com
# LOG_LEVEL=error
# ENABLE_DOCS=false