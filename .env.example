# ==========================================
# NEXUS DIGITAL - ENVIRONMENT CONFIGURATION
# ==========================================

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=production
DOMAIN=nexus-studio-innovation.com



# Application Settings# DigitalOcean Managed Postgres (VPC/приватний хост)

APP_NAME=Nexus DigitalDB_HOST=private-<your-db-host>.ondigitalocean.com

APP_VERSION=1.0.0DB_PORT=25060

DB_NAME=defaultdb

# Optional: Add your custom environment variables hereDB_USER=doadmin

# API_KEY=your-api-keyDB_PASSWORD=<paste_password_here>

# DEBUG=true
# SSL
DB_SSL=require
DB_SSL_CA_PATH=/etc/ssl/do-db-ca.crt

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin Email
ADMIN_EMAIL=admin@nexus-studio-innovation.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./public/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# External APIs (готово для інтеграцій)
# GOOGLE_ANALYTICS_ID=GA_TRACKING_ID
# FACEBOOK_PIXEL_ID=FB_PIXEL_ID
# MAILCHIMP_API_KEY=your-mailchimp-api-key

# Security
CORS_ORIGIN=https://nexus-studio-innovation.com,https://www.nexus-studio-innovation.com,http://localhost:3001
SESSION_SECRET=your-session-secret-key

# Development Settings
LOG_LEVEL=debug
ENABLE_DOCS=true

# Production Settings
# Основний домен: nexus-studio-innovation.com
# PORT=3001 (встановлено вище)
# CORS налаштовано для продакшн домену
# LOG_LEVEL=error (для продакшн)
# ENABLE_DOCS=false (для продакшн)